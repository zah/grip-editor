*
  margin 0
  padding 0

  font-family Consolas

box-direction(direction)
  -webkit-box-direction direction

box-orient(orient)
  -webkit-box-orient orient

box()
  display -webkit-box

box-flex(value)
  -webkit-box-flex value

body, html
  height 100%
  width 100%

body
  // force 3D acceleration    
  -webkit-transform: translateZ(0)
  box()
  box-orient vertical

HEADER_H = 46px
TABBAR_H = 30px
STATUS_H = 10px
CONSOLE_H = 30px

MENU_W = 280px
WIN_BTNS_W = 40px

#header
  box-flex 0
  box()
  box-orient horizontal
  
  width 100%
  height HEADER_H

  background #111

  #menu
    box-flex 0
    width MENU_W

  #tools
    box-flex 0
    width (MENU_W - WIN_BTNS_W)

  #winBtns
    box-flex 0
    width WIN_BTNS_W

  #console
    box-flex 1
    height CONSOLE_H
    margin-top ((HEADER_H - CONSOLE_H) / 2)

    input
      box-sizing border-box
      width 100%
      height 100%
      padding-left 5px
      font-size 17px

  > *
    height 100%

#tabbar
  box-flex 0
  
  width 100%
  height TABBAR_H

  background #ccc
  border-bottom solid 1px #999

  position relative

  TAB_PADDING_BOTTOM = 5px

  ul
    position absolute
    
    left 256px
    bottom TAB_PADDING_BOTTOM - 1
    
    list-style-type none

    li
      font-size 13px
      display inline
      margin-right 4px
      padding TAB_PADDING_BOTTOM 7px
      border 1px solid #999
      background #e2e2e2

      &.active
        font-weight bold
        background white
        border-bottom-color white

#mainarea
  box-flex 100
  width 100%
  
  //box()
