// Code Mirror Style
.CodeMirror
  border none
  font-size 12px

.CodeMirror-gutter 
  background: #666
  min-width 3.5em
  padding-left 5px
  padding-right 10px
  border none
  box-sizing border-box
  box-shadow 0px 0px 7px rgba(0, 0, 0, 0.5)
  
.CodeMirror-gutter-text
  color #ccc

.CodeMirror-scroll
  height 100%

.CodeMirror-lines > div
  padding-left 5px
  
pre.CodeMirror-cursor
  margin-left 5px

